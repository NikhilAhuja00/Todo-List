pipeline {
    agent any 
    stages {
        stage('BUILD_STAGE') { 
            steps {
                echo 'Building..'
            }
        }
        stage('PUSH_STAGE') { 
            steps {
            	echo 'Pushing..'    
            }
        }
        stage('DEPLOY') { 
            steps {
                echo 'Deploying..'
            }
        }
    }
}